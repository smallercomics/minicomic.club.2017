<div class="contributor">
    <a title="{{ name }}" rel="noopener" href="{{ firstkeyval links }}">
        <img
          class="profile"
          alt="{{ name }}"
          src="./{{ asset image 1000}}"
          srcset="./{{ asset image 200 }} 200w, ./{{ asset image 400 }} 400w, ./{{ asset image 800 }} 800w,  ./{{ asset image 1000 }} 1000w"
          sizes="(max-width: 759px) 100vw,(min-width: 760px) 50vw"
        />
    </a>
    <div class="info">
        <h2>{{  name  }}</h2>
        <ul class="links">
            {{#each links}}
                <li><a href="{{this}}" target="_blank">{{@key}}</a></li>
            {{/each}}
            {{#if interview }}
                <li class="interview"><span>&#10039;</span><a href="{{interview.link}}" target="_blank">{{interview.title}}</a><span>&#10039;</span></li>
            {{/if}}
        </ul>
    </div>
</div>